<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_brown2"
    tools:context="com.example.user.myapplication.HeightActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/height_text_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height_text_head"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="36dp"
        app:layout_constraintRight_toRightOf="@+id/height_press_height"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/height_press_waistline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_fitness"
        android:ems="10"
        android:hint="@string/height_press_waistline"
        android:inputType="numberDecimal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/height_press_weight"
        app:layout_constraintRight_toRightOf="@+id/height_press_weight"
        app:layout_constraintTop_toBottomOf="@+id/height_press_weight"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/height_press_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="34dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_weight"
        android:ems="10"
        android:hint="@string/height_press_weight"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toLeftOf="@+id/height_text_unitweight"
        app:layout_constraintTop_toBottomOf="@+id/height_press_height"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/height_press_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_ruler"
        android:ems="10"
        android:hint="@string/height_press_height"
        android:inputType="numberDecimal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/height_press_weight"
        app:layout_constraintRight_toRightOf="@+id/height_press_weight"
        app:layout_constraintTop_toBottomOf="@+id/height_text_head"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/height_previous"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_left_arrow"

        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/height_next"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/height_next" />

    <Button
        android:id="@+id/height_next"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_right_arrow"

        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/height_text_unitheight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height_text_unitheight"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/height_press_height"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/height_text_unitweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height_text_unitweight"
        android:layout_marginEnd="29dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/height_press_weight"
        tools:layout_constraintBaseline_creator="1" />

    <TextView
        android:id="@+id/height_text_unitwaistline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height_text_unitwaistline"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/height_press_waistline"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="11dp" />
</android.support.constraint.ConstraintLayout>
