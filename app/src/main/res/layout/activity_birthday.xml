<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.myapplication.BirthdayActivity">

    <EditText
        android:id="@+id/birthday_cal_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/birthday_cal_birthday"
        android:inputType="date"
        android:focusable="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/birthday_press_birthday"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/birthday_press_birthday"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/birthday_press_birthday"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/birthday_press_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:focusable="false"
        android:ems="10"
        android:hint="@string/birthday_press_birthday"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/birthday_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/birthday_previous"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="38dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="84dp" />

    <Button
        android:id="@+id/birthday_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/birthday_next"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="85dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="38dp"
        android:layout_marginRight="85dp" />
</android.support.constraint.ConstraintLayout>
