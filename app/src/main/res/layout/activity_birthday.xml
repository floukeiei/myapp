<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_brown9"
    tools:context="com.example.user.myapplication.BirthdayActivity">

    <EditText
        android:id="@+id/birthday_cal_birthday"
        android:layout_width="106dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:drawablePadding="10dp"
        android:ems="10"
        android:focusable="false"
        android:hint="@string/birthday_cal_birthday"
        android:inputType="date"
        app:layout_constraintLeft_toLeftOf="@+id/birthday_press_birthday"
        app:layout_constraintRight_toRightOf="@+id/birthday_press_birthday"
        app:layout_constraintTop_toBottomOf="@+id/birthday_press_birthday"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/birthday_press_birthday"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_newborn"
        android:ems="10"
        android:focusable="false"
        android:hint="@string/birthday_press_birthday"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/birthday_previous"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="424dp"
        android:background="@drawable/ic_left_arrow"
        app:layout_constraintEnd_toStartOf="@+id/birthday_next"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/birthday_next"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="424dp"
        android:background="@drawable/ic_right_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />
</android.support.constraint.ConstraintLayout>
