<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.myapplication.SmokingActivity">


    <Switch
        android:id="@+id/smoking_switch_smoking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/smoking_switch_smoking"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/smoking_next"
        android:layout_marginTop="119dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/smoking_switch_diabetes"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/smoking_switch_diabetes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/smoking_switch_diabetes"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="29dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/smoking_switch_smoking"
        android:layout_marginRight="29dp" />

    <TextView
        android:id="@+id/smoking_smoking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/smoking_smoking"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="62dp"
        android:layout_marginTop="129dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="62dp" />

    <TextView
        android:id="@+id/smoking_diabetes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/smoking_diabetes"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="62dp"
        app:layout_constraintBottom_toBottomOf="@+id/smoking_switch_diabetes"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="62dp" />

    <Button
        android:id="@+id/smoking_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ก่อนหน้า"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="137dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="62dp" />

    <Button
        android:id="@+id/smoking_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ถัดไป"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="61dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/smoking_previous"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="61dp" />
</android.support.constraint.ConstraintLayout>
